{
  "compilerOptions": {
    "target": "ES2021",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ES2015",
    "esModuleInterop": true,
    "lib": [
      "ES2021",
      "DOM"
    ],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "lib/*"
      ],
      "@molecules/*": [
        "lib/molecules/*"
      ],
      "@organisms/*": [
        "lib/organisms/*"
      ],
      "@utils/*": [
        "lib/utils/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "sourceMap": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}